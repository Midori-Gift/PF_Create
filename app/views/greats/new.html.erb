<div class="container">
  <div class="row ml-auto">
      <div class="error-message mt-3 col-md-6 mx-auto">
         <%= render 'greats/error_message', great: @great %>  <!--エラーメッセージ用部分テンプレート-->
       </div>
     <div class="col-md-8 mx-auto">


      <%= form_with model: @great, url:'/greats', local:true do |f| %>
      <!--< @greats.each do |greats| %>-->
       <table class="table table-borderless text-white mt-5">
          <tr>
              <td><%= f.attachment_field :great_image, placeholder: "イメージ" %></td>
            </tr>
       </table>
      <table class="table table-borderless text-white">
          <tbody>
            <tr>
              <td class="pt-3"><strong>偉人名</strong></td>
              <td class="pt-3"><%= f.text_field :name, class:"form-control" %></td>
            </tr>
            <div class="form-group">
              <tr>
                <td class="pt-3"><strong>ジャンルタグ</strong></td>
                <td class="pt-3"><%= f.text_field :tag_ids, class:"form-control", id:'tag_ids', placeholder: "タグ複数の場合「,」で区切ります。", value: @tag_list %></td>
              </tr>
            </div>
            <tr>
              <td class="pt-3"><strong>見出し</strong></td>
              <td class="pt-3"><%= f.text_area :head, class:"form-control" %></td>
            </tr>
            <tr>
              <td class="pt-3"><strong>名言</strong></td>
              <td class="pt-3"><%= f.text_field :word, class:"form-control" %></td>
            </tr>

            <tr>
              <td class="pt-3"><strong>どんな人におすすめですか？</strong></td>
              <td class="pt-3"><%= f.text_area :recommend, class:"form-control" %></td>
            </tr>
        </tbody>
      </table>
            <h4 class="mt-5"><strong>偉人紹介</strong></h4>
            <div class="topic"><%= f.text_area :topic, class:"form-control mt-4" %></div>
            <div class="form-btn mt-3"><%= f.submit "投稿する", class:"btn btn-outline-secondary bg-light font-weight-bold float-right mb-5" %></div>
      <% end %>
    </div>
  </div>
</div>

