<div class="container">
  <div class="row">
    <div class="col-md-10">
      <% if @great.errors.any? %>
          <div class="alert alert-secondary bg-white" role="alert">
            <strong>入力内容にエラーがあります</strong>
            <ul>
              <% @great.errors.each do |attr, msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

      <%= form_with model: @great, local:true do |f| %>
      <!--< @greats.each do |greats| %>-->
       <table class="table table-borderless text-white mt-5">
          <tr>
               <td><%= attachment_image_tag @great, :great_image, :fill, 100, 100, fallback:"Unkown_account.jpg" %></td>
              <td><%= f.attachment_field :great_image, placeholder: "イメージ" %></td>
            </tr>
       </table>
      <table class="table table-borderless text-white">
          <tbody>

            <tr>
              <td class="pt-3"><strong>偉人名</strong></td>
              <td class="pt-3"><%= f.text_field :name, class:"form-control" %></td>
            </tr>
            <div class="form-group">
              <tr>
                <td class="pt-3"><strong>ジャンルタグ</strong></td>
                <td class="pt-3"><%= f.text_field :tag_ids, class:"form-control", id:'tag_ids', placeholder: "タグをつける。　複数つける場合','で区切ってください", value: @tag_list %></td>
              </tr>
            </div>
            <tr>
              <td class="pt-3"><strong>見出し</strong></td>
              <td class="pt-3"><%= f.text_area :head, class:"form-control" %></td>
            </tr>
            <tr>
              <td class="pt-3"><strong>名言</strong></td>
              <td class="pt-3"><%= f.text_field :word, class:"form-control" %></td>
            </tr>

            <tr>
              <td class="pt-3"><strong>どんな人におすすめですか？</strong></td>
              <td class="pt-3"><%= f.text_area :recommend, class:"form-control" %></td>
            </tr>
        </tbody>
      </table>
            <h5 class="mt-5"><strong>偉人紹介</strong></h5>
            <div class="topic"><%= f.text_area :topic, class:"form-control mt-4" %></div>
            <div class="form-btn mt-3"><%= f.submit "編集を保存", class:"btn btn-outline-secondary mt-3 float-right" %></div>
      <% end %>
    </div>
  </div>
</div>

