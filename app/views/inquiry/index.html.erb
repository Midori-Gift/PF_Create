<div class="container">
  <div class="row">
    <div class="col-md-9 mt-5">
      <%= form_with model: @inquiry, url:'/inquiry/confirm', local:true do |f| %>
        <div class="page-header mb-5">
          <h2>お問い合わせ</h2>
        </div>

        <% if @inquiry.errors.any? %>
          <div class="alert alert-secondary bg-white" role="alert">
            <strong>入力内容にエラーがあります</strong>
            <ul>
              <% @inquiry.errors.each do |attr, msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <table class="table text-white">
          <tr>
            <th>名前<span class="text-danger">（必須）</span></th>
            <td><%= f.text_field :name, class:"form-control" %></td>
          </tr>
          <tr>
            <th>メールアドレス<span class="text-danger">（必須）</span></th>
            <td><%= f.text_field :email, class:"form-control" %></td>
          </tr>
          <tr>
            <th>お問い合わせ内容</th>
            <td><%= f.text_area :message, class:"form-control" %></td>
          </tr>
        </table>
        <%= f.submit '確認', class: 'btn btn-outline-secondary bg-white float-right' %>
      <% end %>
    </div>
  </div>
</div>