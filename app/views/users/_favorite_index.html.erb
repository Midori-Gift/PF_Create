 <div class="favorite_<%= greats.id %>">
  <% if greats.favorited_by?(current_user) %>
    <%= link_to(great_favorites_path(greats), remote:true, class:"text-danger heart-red", method: :delete) do %>
    <i class="fa fa-heart" aria-hidden="true"></i><%= greats.favorites.count %>
  <% end %>
  <% else %>
    <%= link_to(great_favorites_path(greats), remote:true, class:"text-primary heart-red", method: :post,) do %>
      <i class="fa fa-heart" aria-hidden="true"></i><%= greats.favorites.count %>
    <% end %>
  <% end %>
</div>