<div class="container">
    <div class="row">
        <div class="col-md-8 mt-5">
            <h2>ユーザー情報編集</h2>
            <%= form_with model: @user, local: true do |f| %>
            <table class="table table-borderless mt-4 text-white">
                <tr>
                    <td>プロフィール画像</td>
                    <td><%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %></td>
                </tr>
                <tr>
                    <td>ユーザーネーム</td>
                    <td><%= f.text_field :name, class:"form-control"%></td>
                </tr>
                <tr>
                    <td>メールアドレス</td>
                    <td><%= f.text_field :email, class:"form-control"%></td>
                </tr>

            </table>
            <div class="mx-auto">
                <span class="float-right"><%= f.submit "編集を保存", class:"btn btn-outline-secondary bg-light font-weight-bold ml-5" %></span>
                <span class="float-right"><%= link_to "退会", user_unsubscribe_path, class:"btn btn-outline-secondary bg-light font-weight-bold mr-5" %></span>
            </div>
            <% end %>
        </div>
    </div>
</div>